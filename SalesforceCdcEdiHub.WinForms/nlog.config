<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Trace"
      internalLogFile="c:\temp\nlog-internal.log">

	<extensions>
		<add assembly="NLog.Windows.Forms" />
	</extensions>

	<targets>
		<target xsi:type="RichTextBox"
				name="rtb"
				controlName="rtxLog"
				formName="MainForm"
				useDefaultRowColoringRules="false"
				layout="${longdate} [${level}] ${callsite} ${message}"
				autoScroll="true"
				maxLines="10000">

			<!-- Row coloring by log level -->
			<rowColoringRules>
				<rowColoringRule condition="level == LogLevel.Debug" fontColor="Blue"  />
				<rowColoringRule condition="level == LogLevel.Info" fontColor="Lime" />
				<rowColoringRule condition="level == LogLevel.Warn" fontColor="Yellow" />
				<rowColoringRule condition="level == LogLevel.Error" fontColor="Red" />
				<rowColoringRule condition="level == LogLevel.Fatal" fontColor="White" backgroundColor="Red" />
			</rowColoringRules>

			<!-- Word coloring rules (regex or plain text) -->
			<wordColoringRules>
				<!-- Numbers in green -->
				<wordColoringRule regex="\b\d+[\d\-\.\:\%]*\b" fontColor="Yellow" />

				<!-- SQL keywords in blue, bold -->
				<wordColoringRule regex="\b(SELECT|INSERT|UPDATE|DELETE)\b" fontColor="Blue"  />

				<!-- Case-insensitive 'error' in magenta -->
				<wordColoringRule regex="(?i)error" fontColor="Magenta" />
			</wordColoringRules>
		</target>
	</targets>

	<rules>
		<!-- IMPORTANT: must match the target name ("rtb") -->
		<logger name="*" minlevel="Trace" writeTo="rtb" />
	</rules>
</nlog>
